{% extends "_layouts/application.html.twig" %}
{% block title %}{{title}}{% endblock %}

{% block content %}
<div class="row-fluid">
<ul>
<li><a href="{{base_url()}}admin/backs/create" class="btn btn-info">Add New</a></li>
<li><a href="{{base_url()}}admin/backs/upload" class="btn btn-info">Import CSV</a></li>

</ul>
</div>
<div class="table_head"><h6><i class="icon-th"></i>Returns</h6></div>
<table class="table table-condensed table-bordered table-striped" id="datatables">
    <thead>
        <tr>            
            <th>Order Id</th>
            <th>Size Sku</th>            
            <th>Finish Good</th>            
            <th>QC Reject</th>            
            <th>Reason</th>            
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for back in backs %}
            <tr>    
                <td>{{back.order_id}}</td>
                <td>{{back.size_sku}}</td>
                <td>{{back.fg}}</td>
                <td>{{back.qc_reject}}</td>
                <td>{{back.reason}}</td>
                <td><a href="{{ base_url()}}admin/backs/update/{{back.id}}" class="btn btn-mini"><i class="icon-edit" title="Edit"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>    
    </table>
            <script>
                function confirm_delete() {
                    if(confirm("Are you sure?"))
                        return true;
                    else
                        return false;
                }
            </script>
{% endblock %}