{% extends "_layouts/application.html.twig" %}
{% block title %}{{title}}{% endblock %}
{% block content %} 
<div class="row-fluid">    
    <div class="row-fluid">
    	<p>
			<a href="{{base_url()}}uploads/download/sample_sheet_size.csv" alt="Sample Sheet" title="Download Sample Sheet" target="_blank" /> Download Sample Sheet * </a>
		</p>    
        <div class="row-fluid">{{validation_errors()|raw}}</div>
        <form action="{{action}}" method="post" enctype="multipart/form-data">    
                <div class="row-fluid">
                    <div class="span6 offset0">
                        <fieldset>
                            <legend>Upload Order File</legend>
                            <p>
                                <label for="userfile">File (Only CSV) *</label>
                                <input type="file" name="userfile" />
                            </p>
                            <p><input type="submit" value="Upload" class="btn btn-success" /></p>
                        </fieldset>
                    </div>
                </div>	
            </form>
        </div>
    </div>
{% endblock %}