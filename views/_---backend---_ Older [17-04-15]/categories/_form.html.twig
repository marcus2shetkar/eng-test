{% extends "_layouts/application.html.twig" %}
{% block title %}{{title}}{% endblock %}
{% block content %} 
<div class="row-fluid">    
    <div class="row-fluid">       
        <div class="row-fluid">{{validation_errors()|raw}}</div>
        <form action="{{action}}" method="post" enctype="multipart/form-data">
        {% if category %}<input type="hidden" name="id" value="{{category.id }}" />{% endif %}
                <div class="row-fluid">
                    <div class="span6 offset3">
                        <fieldset>
                            <legend>Add New Category</legend>
                            <p>
                                <label for="name">Name *</label>
                                <input type="text" name="name" id="name" placeholder="Name" value="{% if category %}{{category.name}}{% else %}{{set_value('name')}}{% endif %}" class="input-block-level">
                            </p>
                            <p><input type="submit" value="Save" class="btn btn-success" /></p>
                        </fieldset>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}